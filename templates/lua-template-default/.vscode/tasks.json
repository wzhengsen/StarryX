{
    "inputs": [
        {
            "type": "pickString",
            "id": "appleType",
            "description": "选择构建的工程类型",
            "options": [
                "Mac应用",
                "Ios应用"
            ]
        }
    ],
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile",
            "type": "shell",
            "command": "cmake",
            "osx": {
                "args": [
                    "--build",
                    "build/mac/."
                ]
            },
            "args":[
                "--build",
                "build/."
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "options": {
                "statusbar": {
                    "hide": true
                }
            }
        },
        {
            "label": "AllSync",
            "type": "shell",
            "command": "python3",
            "windows":{
                "args": [
                    "${env:ENGINEX_ROOT}/tools/StarryXTools/python/SyncDir.py",
                    "-s",
                    "${workspaceFolder}/Resources",
                    "-d",
                    "${workspaceFolder}/build/bin/${workspaceFolderBasename}/Debug/Resources"
                ],
            },
            "linux":{
                "args": [
                    "${env:ENGINEX_ROOT}/tools/StarryXTools/python/SyncDir.py",
                    "-s",
                    "${workspaceFolder}/Resources",
                    "-d",
                    "${workspaceFolder}/build/bin/${workspaceFolderBasename}/Resources"
                ],
            },
            "osx": {
                "args": [
                    "${env:ENGINEX_ROOT}/tools/StarryXTools/python/SyncDir.py",
                    "-s",
                    "${workspaceFolder}/Resources",
                    "-d",
                    "${workspaceFolder}/build/mac/bin/${workspaceFolderBasename}/Debug/${workspaceFolderBasename}.app/Contents/Resources",
                    "-e",
                    "Info.plist",
                    "-e",
                    "Icon.icns"
                ],
            },
            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "options": {
                "statusbar": {
                    "name": "$(sync) 全量同步",
                    "color": "#c9c612",
                    "hide": true
                }
            }
        },
        {
            "label": "LuaGen",
            "type": "shell",
            "command": "python3",
            "args": [
                "${env:ENGINEX_ROOT}/tools/tolua/genbindings.py"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${env:ENGINEX_ROOT}/tools/tolua",
                "statusbar": {
                    "label": "$(file-code)",
                    "tooltip": "LuaGen",
                    "color": "#6cc4ff",
                    "hide": false,
                }
            }
        },
        {
            "label": "Apple Build",
            "type": "shell",
            "command": "python3",
            "args": [
                "${env:ENGINEX_ROOT}/tools/StarryXTools/python/AppleCMakeBuild.py",
                "--type",
                "${input:appleType}"
            ],
            "presentation": {
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            },
            "osx": {
                "options": {
                    "cwd": "${workspaceFolder}",
                    "statusbar": {
                        "label": "$(archive)",
                        "color": "#fc46cf",
                        "hide": false,
                    }
                }
            },
            "windows": {
                "options": {
                    "statusbar": {
                        "hide": true
                    }
                }
            },
            "linux": {
                "options": {
                    "statusbar": {
                        "hide": true
                    }
                }
            }
        }
    ]
}